{
  "manifest_version": 3,
  "name": "Care-Free Email",
  "description": "Buffer all links in emails to avoid viruses.",
  "version": "1.0.1",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_icon": "ext_img.png"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "icons": {
    "128": "ext_img.png"
  }
}
