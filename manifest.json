{
  "manifest_version": 3,
  "name": "Filter email",
  "description": "Buffer all links in emails.",
  "version": "1.0",
  "permissions": [
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Link Buffer",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]

